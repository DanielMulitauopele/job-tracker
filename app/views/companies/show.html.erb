All Jobs for <strong><%= @company.name %></strong>

<% @company.jobs.each do |job| %>
  <ul><%= job.title %></ul>
<% end %>

<%= form_for [@company, @contact] do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :position %>
  <%= f.text_field :position %>

  <%= f.label :email %>
  <%= f.text_field :email %>


  <%= f.submit "Save" %>
<% end %>
<h2> Contacts </h2>
<% @contacts.each do |contact| %>
  <li><%= contact.name %> </li>
  <li><%= contact.position %> </li>
  <li><%= contact.email %> </li>
  <% end %>
