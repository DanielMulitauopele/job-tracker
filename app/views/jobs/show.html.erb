<%= @job.title%> at  <%= link_to @job.company.name, company_path(@job.company) %>

<br>
Location: <%= @job.city %>
<br>
Level of Interest: <%= @job.level_of_interest %>
<br>
Description: <%= @job.description %>
<br>

<li><%= link_to "Edit", edit_job_path(@job) %></li>

<%= form_for [@job, @comment] do |f| %>
<%= f.label :content %>
<%= f.text_area :content %>
<%= f.submit %>
<% end %>

<h2> Comments </h2>
<% @comments.each do |comment| %>
  <li><%= comment.content %> </li>
  <% end %>
